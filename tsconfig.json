// https://www.typescriptlang.org/tsconfig
{
  "compilerOptions": {
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "module": "commonjs", //"ES6",
    "target": "ES2022",
    // "rootDirs": [
    //   "./src"
    // ],

    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "noImplicitReturns": true,
    // "noUnusedLocals": false,
    // "allowSyntheticDefaultImports": true,
    // "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // "strict": true,
    // "noImplicitAny": true,
    // "strictPropertyInitialization": false,
    // "skipLibCheck": true,
    // "allowImportingTsExtensions": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      // "@Services/*": [
      //   "src/services/*",
      // ],
      // "@Interfaces": [
      //   "src/interfaces.ts",
      // ],
      // "@Logs": [
      //   "src/backend/src/server/logs/index.ts",
      // ],
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules/**/*.js",
    "*.config.js",
    "**/dist",
    "*eslintrc.*",
    "*/**/*.json"
  ],
  
}
